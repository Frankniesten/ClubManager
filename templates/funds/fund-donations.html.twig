{%if data.donations is not empty %}
<!--Table -->
<table id="datatable-donations" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
        <thead>
            <tr>
				{% if is_granted('ROLE_SERVICES_EDIT') %}
				<th width="20px"></th>
				{% endif %}
				<th class="desktop">{% trans %}Donation{% endtrans %}</th>
                <th class="desktop">{% trans %}Date{% endtrans %}</th>
                <th class="desktop">{% trans %}Amount{% endtrans %}</th>
				<th class="desktop">{% trans %}Consumer name{% endtrans %}</th>
            </tr>
        </thead>

        <tbody>
        
        {% for donations in data.donations %}
			<tr>
				{% if is_granted('ROLE_SERVICES_EDIT') %}
				<td align="center">
					<!-- Dropdown menu -->
					<div class="btn-group">
						<button type="button" class="btn btn-primary btn-xs dropdown-toggle"
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
						<div class="dropdown-menu">
							{% if is_granted('ROLE_PERSON_EDIT') %}
								<a class="dropdown-item" href="{{ path('funds_donation_edit', {'id': data.id, 'donationId': donations.id}) }}"><i
											class="mdi mdi-pencil"></i> {% trans %}Edit{% endtrans %}</a>
							{% endif %}
							{% if is_granted('ROLE_PERSON_DELETE') %}
								<a class="dropdown-item" href="{{ path('funds_donation_delete', {'id': data.id, 'donationId': donations.id}) }}"
								   onclick="return confirm('{% trans %}Delete_message{% endtrans %} {{ donations.donationDate ? donations.donationDate | date('d-m-Y') }}');"><i
											class="mdi mdi-delete text-danger"></i> {% trans %}Delete{% endtrans %}</a>
							{% endif %}
						</div>
					</div>
					<!-- End dropdown menu -->

				</td>
				{% endif %}
				<td>
					<a data-toggle="modal" href=".modal-{{ loop.index }}" aria-expanded="false">
					#{{ donations.id }}
					</a>
				</td>
				<td>
						{{ donations.donationDate ? donations.donationDate | date('d-m-Y') }}
			    </td>	
			    <td>
					€{{ donations.amount }}
				</td>
			    <td>

				</td>
			</tr>


			<!--  Modal -->
			<div class="modal fade modal-{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
				<div class="modal-dialog modal-lg" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">{% trans %}Donation{% endtrans %}: #{{ donations.id }}</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<ul>
								<li><b>{% trans %}Date{% endtrans %}:</b> {{ donations.donationDate ? donations.donationDate | date('d-m-Y') }}</li>
								<li><b>{% trans %}Description{% endtrans %}:</b> {{ donations.description }}</li>
								<li><b>{% trans %}Transaction id{% endtrans %}:</b> {{ donations.transactionId }}</li>
								<br>
								<li><b>{% trans %}Amount{% endtrans %}:</b> €{{ donations.amount }}</li>
								<li><b>{% trans %}Currency{% endtrans %}:</b> {{ donations.currency }}</li>
								<li><b>{% trans %}Payment method{% endtrans %}:</b> {{ donations.paymentMethod }}</li>
								<br>

								<br>
								<li><b>{% trans %}Url{% endtrans %}:</b> <a href="{{ donations.url }}" target="_blank">{{ donations.url }}</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<!-- End Modal -->
		{% endfor %}
        
        </tbody>
    </table>

{% else %}
	<div class="text-muted">{% trans %}Not_applicable{% endtrans %}</div>
{% endif %}
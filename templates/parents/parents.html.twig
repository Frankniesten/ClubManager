<div class="row align-items-center">
	<div class="col">
	    <h3>Ouders</h3>
    </div>
        
    <div class="col-4  ">
    	{% if is_granted('ROLE_PERSON_EDIT') %}
	    <div class="btn-group float-right">
	    	<a href="{{ path('app_person_parents_edit', {'id': data.id}) }}" class="btn btn-sm btn-trans btn-purple waves-effect"><i class="fa fa-plus"></i></a>
	    </div>
	    {% endif %}
    </div>
        
</div>
{%if data.parents is not empty %}
<table class="table table-bordered table-striped">   
    <tbody>
        <thead>
            <tr>
            	<td><b>Naam</b></td>
            	<td><b>Email</b></td>
            	<td><b>Categorie</b></td>
        	</tr>
        </thead>
    {% for parents in data.parents %}
        <tr>
            <td>
            	<a href="{{ path('app_person_parents', {'id': parents.id}) }}">{{ parents.familyName }}, {{ parents.givenName }} {{ parents.additionalName }}</a>
            	{% if is_granted('ROLE_PERSON_EDIT') %}
	            <!-- Dropdown -->
			    <div class="dropdown pull-right">
                    <a href="" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="mdi mdi-dots-horizontal"></i>
                    </a>
                    
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        <a href="{{ path('app_person_parents_edit', {'id': data.id}) }}" class="dropdown-item"><i class="mdi mdi-pencil"></i> Bewerken</a>
                    </div>
                </div>
                {% endif %}
            </td>
            <td>
	            <a href="mailto:{{ parents.email }}">{{ parents.email }}</a>
            </td>
            <td>
	         	{{ parents.category.name }}	
            </td>
        </tr>
    {% endfor %} 
   
    </tbody>
</table>
{% endif %} 
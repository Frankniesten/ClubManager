{% extends 'base.html.twig' %}

{% block title %}Personen{% endblock %}

{% block stylesheets %}
	
	{{ parent() }}
	
	<link href="{{ asset('assets/plugins/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}" rel="stylesheet" type="text/css"/>
	        
{% endblock %}


{% block body %}

 	{{ form_start(form) }}
	<div class="row align-items-center">
        <div class="col">
	        <h2>Persoon Toevoegen</h2>
        </div>
        
        <div class="col-4  ">
	        <div class="btn-group float-right">
	        	<button type="submit" class="btn btn-purple waves-effect"><i class="fa fa-save"></i>  Opslaan</button>
				<a href="{{ path('app_people') }}" class="btn btn-purple waves-effect"><i class="fa fa-times"></i>  Sluiten</a>
	        </div>
        </div>
        
	</div>
	
    <!-- Card Box -->
    <div class="card-box table-responsive">
        <div class="row">
	        <div class="col-5">
				{{ form_label(form.givenName) }}
				{{ form_errors(form.givenName) }}
				{{ form_widget(form.givenName) }}
	        </div>
	        
	        <div class="col-2">
		       {{ form_label(form.additionalName) }}
			   {{ form_errors(form.additionalName) }}
			   {{ form_widget(form.additionalName) }}
	        </div>
	        
	        <div class="col-5">
		       {{ form_label(form.familyName) }}
			   {{ form_errors(form.familyName) }}
			   {{ form_widget(form.familyName) }}
	        </div>
	    </div>
	    <br>
	    <div class="row">
	        <div class="col-6">
				{{ form_label(form.birthDate) }}
				{{ form_widget(form.birthDate, {'id': 'datepicker-autoclose'}) }}
	        </div>
	        
	        <div class="col-6">
		       {{ form_label(form.gender) }}
			   {{ form_errors(form.gender) }}
			   {{ form_widget(form.gender) }}
	        </div>
	    </div>
	    <br>
	    <div class="row">
		    <div class="col-12">
			    {{ form_label(form.email) }}
				{{ form_errors(form.email) }}
				{{ form_widget(form.email) }}
		    </div>
	    </div>
	    <br>
	    <div class="row">
	        <div class="col-6">
				{{ form_label(form.telephone) }}
				{{ form_errors(form.telephone) }}
				{{ form_widget(form.telephone) }}
	        </div>
	        
	        <div class="col-6">
		       {{ form_label(form.telephone_2) }}
			   {{ form_errors(form.telephone_2) }}
			   {{ form_widget(form.telephone_2) }}
	        </div>
	    </div>
	    <br>
	    <div class="row">
	        <div class="col-6">
				{{ form_label(form.streetAddress) }}
				{{ form_errors(form.streetAddress) }}
				{{ form_widget(form.streetAddress) }}
	        </div>
	        
	        <div class="col-6">
		       {{ form_label(form.postalCode) }}
			   {{ form_errors(form.postalCode) }}
			   {{ form_widget(form.postalCode) }}
	        </div>
	    </div>
	    <br>
	    <div class="row">
	        <div class="col-6">
				{{ form_label(form.addressLocality) }}
				{{ form_errors(form.addressLocality) }}
				{{ form_widget(form.addressLocality) }}
	        </div>
	        
	        <div class="col-6">
		       {{ form_label(form.addressCountry) }}
			   {{ form_errors(form.addressCountry) }}
			   {{ form_widget(form.addressCountry) }}
	        </div>
	    </div>
	    <br>
	    <div class="row">
		    <div class="col-12">
			    {{ form_label(form.categorie) }}
				{{ form_errors(form.categorie) }}
				{{ form_widget(form.categorie) }}
		    </div>
	    </div>

		{{ form_end(form) }}        
    </div>      

{% endblock %}

{% block javascripts %}

	{{ parent() }}
	
	<!--form wysiwig js-->
    <script src="{{ asset('assets/plugins/tinymce/tinymce.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>

    <script type="text/javascript">
        jQuery('#datepicker-autoclose').datepicker({
	        	format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
    </script>
    
{% endblock %}
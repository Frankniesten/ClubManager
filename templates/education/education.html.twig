<div class="row align-items-center">
	<div class="col">
	    <h3>Opleiding</h3>
    </div>
        
    <div class="col-4  ">
    {% if is_granted('ROLE_PERSON_CREATE') %}
	    <div class="btn-group float-right">
	    	<a href="{{ path('app_person_education_create', {'id': data.id}) }}" class="btn btn-sm btn-trans btn-purple waves-effect"><i class="fa fa-plus"></i></a>
	    </div>
	{% endif %}
    </div>
        
</div>
{%if data.education is not empty %}
<table class="table table-bordered table-striped">   
    <tbody>
        <thead>
            <tr>
            	<td><b>Diploma</b></td>
				<td><b>Datum Behaald</b></td>
				<td><b>Muziekschool</b></td>
        	</tr>
        </thead>
    {% for education in data.education %}
        <tr>
            <td>{{ education.certificate }}
	            
	            <!-- Dropdown -->
		    	{% if is_granted('ROLE_PERSON_EDIT') or is_granted('ROLE_PERSON_DELETE') %}
			    <div class="dropdown pull-right">
                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="mdi mdi-dots-horizontal"></i>
                    </a>
                    
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        {% if is_granted('ROLE_PERSON_EDIT') %}
                        <a href="{{ path('app_person_education_edit', {'id': data.id, 'educationID': education.id}) }}" class="dropdown-item"><i class="mdi mdi-pencil"></i> Bewerken</a>
                        {% endif %}
                        <!-- item-->
                        {% if is_granted('ROLE_PERSON_DELETE') %}
                        <a href="{{ path('app_person_education_delete', {'id': data.id, 'educationID': education.id}) }}" class="dropdown-item"><i class="mdi mdi-delete text-danger"></i> Verwijderen</a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                <!-- End Dropdown --> 
            </td>
            
            <td>{{ education.dataAchieved is empty ? "" : education.dataAchieved |date("d-m-Y") }}</td>
            
            <td>
	            {% if education.organization %}
					{{ education.organization.legalName }} 
				{% endif %}
			</td>
            
        </tr>
    {% endfor %} 
   
    </tbody>
</table>
{% endif %} 
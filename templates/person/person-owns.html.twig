{%if data.owns is not empty %}
<!--Table -->
<table id="datatable-owns" class="table table-striped table-bordered" cellspacing="0">
        <thead>
            <tr>
				<th width="20px"></th>
                <th>Product</th>
                <th>Model</th>
                <th>Fabrikant</th>
				<th>In bezit vanaf</th>
				<th>In bezit tot</th>
            </tr>
        </thead>

        <tbody>
        
         {% for owns in data.owns %}
			<tr>
				<td align="center">
					<!-- Dropdown menu -->
					<div class="btn-group">
					  	<button type="button" class="btn btn-info btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				  		<div class="dropdown-menu">
				  			<a class="dropdown-item" href=""><i class="mdi mdi-pencil"></i> Bewerken</a>
				  			<a class="dropdown-item" href="" onclick="return confirm('Weet je zeker dat je wilt verwijderen?');"><i class="mdi mdi-delete text-danger" ></i> Verwijderen</a>
				  		</div>
					</div>
					<!-- End dropdown menu -->
				</td>
			    <td>
					<a href="{{ path('app_product', {'id': owns.typeofGood.id}) }}">{{ owns.typeofGood.name }}</a>
			    </td>	
			    <td>
            		{{ owns.typeofGood.model }}
            	</td>
	            <td>
		            {{ owns.typeofGood.manufacturer }}
	            </td>
	            <td>
		            {{ owns.ownedFrom |date("d-m-Y")}}
	            </td>
				<td>
		            {{ owns.ownedTrough ? owns.ownedTrough|date('d-m-Y') }}
	            </td>
			</tr>
		{% endfor %}
        
        </tbody>
    </table>

{% else %}
	<div class="text-muted">Niet van toepassing.</div>
{% endif %}
{% extends 'base_content_full_width.html.twig' %}

{% block body %}

{{ form_start(form) }}

	<!-- Page header -->
	<div class="d-flex justify-content-between flex-row">
		<div class="p-2">
			{% if 'create' in app.request.uri  %}
				<h3>Persoon toevoegen</h3>
			{% endif %}
			{% if 'edit' in app.request.uri  %}
				<h3>{{ data.familyName }}, {{data.givenName }} {{ data.additionalName }} - bewerken</h3>
			{% endif %}
		</div>

		<div class="p-2">
			<div class="btn-group float-right">
				<button type="submit" class="btn btn-primary btn-sm"><i class="mdi mdi-content-save"></i> {% trans %}save{% endtrans %}</button>
				{% if 'create' in app.request.uri  %}
					<a href="{{ path('person') }}" class="btn btn-primary btn-sm"><i class="mdi mdi-close"></i> {% trans %}close{% endtrans %}</a>
				{% endif %}
				{% if 'edit' in app.request.uri  %}
					<a href="{{ path('person_id', {'id': data.id}) }}" class="btn btn-primary btn-sm"><i class="mdi mdi-close"></i> {% trans %}close{% endtrans %}</a>
				{% endif %}
			</div>
		</div>
	</div>
	<!-- End Page header -->







<!-- Content -->

	<div class="card">
		<div class="card-body">
			
			<div class="row mb-sm-4">
		        <div class="col-sm">
					{{ form_label(form.givenName) }}
					{{ form_widget(form.givenName) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.additionalName) }}
				   {{ form_widget(form.additionalName) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.familyName) }}
				   {{ form_widget(form.familyName) }}
		        </div>
		    </div>

		    <div class="row mb-sm-4">
		        <div class="col-sm">
					{{ form_label(form.birthDate) }}
					{{ form_widget(form.birthDate, {'id': 'datepicker-autoclose'}) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.gender) }}
				   {{ form_widget(form.gender) }}
		        </div>
		    </div>

		    <div class="row mb-sm-4">
			    <div class="col-sm">
				    {{ form_label(form.email) }}
					{{ form_widget(form.email) }}
			    </div>
		    </div>

		    <div class="row mb-sm-4">
		        <div class="col-sm">
					{{ form_label(form.telephone) }}
					{{ form_widget(form.telephone) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.telephone_2) }}
				   {{ form_widget(form.telephone_2) }}
		        </div>
		    </div>

		    <div class="row mb-sm-4">
		        <div class="col-sm">
					{{ form_label(form.streetAddress) }}
					{{ form_widget(form.streetAddress) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.postalCode) }}
				   {{ form_widget(form.postalCode) }}
		        </div>
		    </div>

		    <div class="row mb-sm-4">
		        <div class="col-sm">
					{{ form_label(form.addressLocality) }}
					{{ form_widget(form.addressLocality) }}
		        </div>
		        
		        <div class="col-sm">
			       {{ form_label(form.addressCountry) }}
				   {{ form_widget(form.addressCountry) }}
		        </div>
		    </div>

		    <div class="row mb-sm-4">
			    <div class="col-sm">
				    {{ form_label(form.alumni) }}
					{{ form_widget(form.alumni) }}
			    </div>
		    </div>

		    <div class="row mb-sm-4">
			    <div class="col-sm">
				    {{ form_label(form.category) }}
					{{ form_widget(form.category) }}
			    </div>
		    </div>

		</div>
	</div>

{{ form_end(form) }} 

{% endblock %}

{% block javascripts %}

	<script type="text/javascript" src="{{ asset('assets/plugins/switchery/switchery.min.js') }}"></script>
	
	{{ parent() }}
	
	<script>
	    $(document).ready(function(){
	        $('.select2').select2({
  theme: "bootstrap4",
  width: '100%'
});
	        
	    });
	</script>
	
    
    

    <script type="text/javascript">
        jQuery('#datepicker-autoclose').datepicker({
	        	format: 'dd-mm-yyyy',
                autoclose: true,
                todayHighlight: true
            });
    </script>
    
{% endblock %}
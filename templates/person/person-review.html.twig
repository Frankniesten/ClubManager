{%if data.review is not empty %}
    <!--Table -->
    <table id="datatable-review" class="table table-striped table-bordered" cellspacing="0">
        <thead>
        <tr>
            <th width="20px"></th>
            <th>{% trans %}reviews{% endtrans %}</th>
            <th>{% trans %}date{% endtrans %}</th>
        </tr>
        </thead>

        <tbody>

        {% for review in data.review %}
            <tr>
                <td align="center">
                    <!-- Dropdown menu -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href=""><i class="mdi mdi-pencil"></i> {% trans %}edit{% endtrans %}</a>
                            <a class="dropdown-item" href="" onclick="return confirm('Weet je zeker dat je wilt verwijderen?');"><i class="mdi mdi-delete text-danger" ></i> {% trans %}delete{% endtrans %}</a>
                        </div>
                    </div>
                    <!-- End dropdown menu -->
                </td>
                <td>
                    <a data-toggle="collapse" href="#review-{{ loop.index }}" aria-expanded="false">
                        {{review.reviewAspect}}
                    </a>
                    <div class="collapse" id="review-{{ loop.index }}">
                        <br>
                        <div class="card card-body">
                            {{review.reviewBody | raw }}
                        </div>
                    </div>
                </td>
                <td>
                    {{ review.updatedAt |date("d-m-Y  - H:i")}}
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% else %}
    <div class="text-muted">Niet van toepassing.</div>
{% endif %}
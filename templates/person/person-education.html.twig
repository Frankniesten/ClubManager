{%if data.education is not empty %}
<!--Table -->
<table id="datatable-education" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
        <thead>
            <tr>
				<th width="20px"></th>
                <th>{% trans %}diploma{% endtrans %}</th>
                <th class="desktop">{% trans %}dateAchieved{% endtrans %}</th>
                <th class="desktop">{% trans %}school{% endtrans %}</th>
            </tr>
        </thead>

        <tbody>
        
        {% for education in data.education %}
			<tr>
				<td align="center">
					<!-- Dropdown menu -->
					<div class="btn-group">
					  	<button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				  		<div class="dropdown-menu">
				  			<a class="dropdown-item" href=""><i class="mdi mdi-pencil"></i> {% trans %}edit{% endtrans %}</a>
				  			<a class="dropdown-item" href="" onclick="return confirm('Weet je zeker dat je wilt verwijderen?');"><i class="mdi mdi-delete text-danger" ></i> {% trans %}delete{% endtrans %}</a>
				  		</div>
					</div>
					<!-- End dropdown menu -->
				</td>
			    <td>
					{{ education.certificate }}
			    </td>	
			    <td>
				    {{ education.dataAchieved is empty ? "" : education.dataAchieved |date("d-m-Y") }}
				</td>
			    <td>
				   	{% if education.organization %}
						{{ education.organization.legalName }} 
					{% endif %}
				</td>
			</tr>
		{% endfor %}
        
        </tbody>
    </table>

{% else %}
	<div class="text-muted">Niet van toepassing.</div>
{% endif %}
{%if data.parents is not empty %}
<!--Table -->
<table id="datatable-parents" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
        <thead>
            <tr>
				<th width="20px"></th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th class="desktop">{% trans %}Email{% endtrans %}</th>
                <th class="desktop">{% trans %}Category{% endtrans %}</th>
            </tr>
        </thead>

        <tbody>
        
        {% for parents in data.parents %}
			<tr>
				<td align="center">
					<!-- Dropdown menu -->
					<div class="btn-group">
					  	<button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
				  		<div class="dropdown-menu">
				  			<a class="dropdown-item" href="{{ path('person_parents_edit', {'id': data.id}) }}"><i class="mdi mdi-pencil"></i> {% trans %}Edit{% endtrans %}</a>
				  		</div>
					</div>
					<!-- End dropdown menu -->
				</td>
			    <td>
					<a href="{{ path('person_id', {'id': parents.id}) }}">{{ parents.familyName }}, {{ parents.givenName }} {{ parents.additionalName }}</a>
			    </td>	
			    <td>
				   {{ parents.email }}
					{%if parents.email is not empty %}
						<a href="mailto:{{ parents.email }}"><i class="mdi mdi-email-send text-primary" style="font-size: large; line-height: 1.3;"></i></a>
					{% endif %}
				</td>
			    <td>
					<span class="badge badge-primary">{{ parents.category.name }}</span>
				</td>
			</tr>
		{% endfor %}
        
        </tbody>
    </table>

{% else %}
	<div class="text-muted">{% trans %}Not_applicable{% endtrans %}</div>
{% endif %}
{%if data.organizations is not empty %}
    <!--Table -->
    <table id="datatable-organizations" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
        <thead>
        <tr>
            {% if is_granted('ROLE_PERSON_EDIT') %}
                <th width="20px"></th>
            {% endif %}
            <th class="all">{% trans %}Organization{% endtrans %}</th>
            <th class="desktop">{% trans %}Email{% endtrans %}</th>
            <th class="desktop">{% trans %}Category{% endtrans %}</th>
        </tr>
        </thead>

        <tbody>

        {% for organizations in data.organizations %}
            <tr>
                {% if is_granted('ROLE_PERSON_EDIT') %}
                <td align="center">
                    <!-- Dropdown menu -->
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-xs dropdown-toggle"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ path('person_organization_edit', {'id': data.id}) }}"><i
                                        class="mdi mdi-pencil"></i> {% trans %}Edit{% endtrans %}
                            </a>
                        </div>
                    </div>
                    <!-- End dropdown menu -->
                </td>
                {% endif %}

                <td>
                    <a href="{{ path('organization_id', {'id': organizations.id}) }}"> {{ organizations.legalName }}</a>
                </td>

                <td>
                    {{ organizations.email }}
                    {%if organizations.email is not empty %}
                        <a href="mailto:{{ organizations.email }}"><i class="mdi mdi-email-send text-primary" style="font-size: large; line-height: 1.3;"></i></a>
                    {% endif %}
                </td>
                <td>
                    <span class="badge badge-primary">{{ organizations.category.name }}</span>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% else %}
    <div class="text-muted">{% trans %}Not_applicable{% endtrans %}</div>
{% endif %}
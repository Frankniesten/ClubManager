{% extends 'base_content_full_width.html.twig' %}

{% block body %}

    <!-- Page header -->
    <div class="d-flex justify-content-between flex-row">
        <div class="p-2"><h3>{% trans %}Navbar_venue{% endtrans %}</h3></div>
        <div class="p-2">
            {% if is_granted('ROLE_PERSON_CREATE') %}
                <a class="btn btn-primary btn-sm float-right" href="{{ path('postaladdress_create') }}" role="button"><i class="mdi mdi-plus"></i> {% trans %}Venue_add{% endtrans %}</a>
            {% endif %}
        </div>
    </div>
    <!-- End Page header -->

    <!-- Content -->
    <div class="card">
        <div class="card-body">


            <!--Table -->
            <table id="datatable-buttons" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th class="desktop" width="20px"></th>
                    <th class="all">{% trans %}Venues{% endtrans %}</th>
                    <th>{% trans %}Street address{% endtrans %}</th>
                    <th>{% trans %}Postal code{% endtrans %}</th>
                    <th>{% trans %}Address locality{% endtrans %}</th>
                </tr>
                </thead>

                <tbody>

                {% for data in data %}
                <tr>
                    <td align="center">
                        <!-- Dropdown menu -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs dropdown-toggle"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('postaladdress_edit', {'id': data.id}) }}"><i
                                            class="mdi mdi-pencil"></i> {% trans %}Edit{% endtrans %}</a>
                                <a class="dropdown-item" href="{{ path('postaladdress_delete', {'id': data.id}) }}"
                                   onclick="return confirm('{% trans %}Delete_message{% endtrans %} } {{ data.venue }}');"><i
                                            class="mdi mdi-delete text-danger"></i> {% trans %}Delete{% endtrans %}</a>
                            </div>
                        </div>
                        <!-- End dropdown menu -->
                    </td>

                    <td>
                        {{ data.venue }}
                    </td>
                    <td>
                        {{ data.streetAddress }}
                    </td>
                    <td>
                        {{ data.postalCode }}
                    </td>
                    <td>
                        {{ data.addressLocality }}
                    </td>

                    {% endfor %}

                </tbody>
            </table>
        </div>
    </div>



{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {

            var table = $('#datatable-buttons').DataTable({
                lengthChange: false,
                pageLength: 50,
                columnDefs: [
                    {"orderable": false, "targets": 0}
                ],
                order: [[1, "asc"]],
                {% if app.request.getLocale() == 'nl' %}
                language: {
                    url: "{{ asset('assets/plugins/datatables/nl_NL.json') }}"
                },
                {%  endif %}
                initComplete: function () {
                    setTimeout( function () {
                        table.buttons().container().appendTo( '#datatable-buttons_wrapper .col-md-6:eq(0)' );
                    }, 10 );
                }
            });
        });
    </script>
{% endblock %}
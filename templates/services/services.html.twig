{% extends 'base_content_full_width.html.twig' %}

{% set pdfCat = '' %}

{% block body %}

	<!-- Page header -->
	<div class="d-flex justify-content-between flex-row">
		<div class="p-2"><h3>{% trans %}Navbar_services{% endtrans %}</h3></div>
		<div class="p-2">
			{% if is_granted('ROLE_SERVICES_CREATE') %}
				<a class="btn btn-primary btn-sm float-right" href="{{ path('service_create') }}" role="button"><i class="mdi mdi-plus"></i> {% trans %}Service_add{% endtrans %}</a>
			{% endif %}
		</div>
	</div>
	<!-- End Page header -->

	<!--Tabs -->
	<nav>
		<div class="nav nav-tabs">
			<li class="nav-item">
				<a class="nav-item nav-link {% if query == 'all' or query == null %}active {% endif %}"
				   href="{{ path('service', {'category': 'all'} ) }}">{% trans %}Service_nav_all{% endtrans %}</a>
			</li>

			{% for data in category %}
				<li class="nav-item">
					<a class="nav-item nav-link {% if query == data.id %}active {% endif %}"
					   href="{{ path('service', {'category': data.id}) }}">{{ data.name }}</a>
				</li>
			{% endfor %}

		</div>
	</nav>
	<!-- End tabs -->

	<!-- Content -->
	<div class="card">
		<div class="card-body">


			<!--Table -->
			<table id="datatable-buttons" class="table table-striped table-bordered display responsive" width="100%" cellspacing="0">
				<thead>
				<tr>
					{% if is_granted('ROLE_SERVICES_EDIT') or is_granted('ROLE_SERVICES_DELETE') %}
						<th width="20px"></th>
					{% endif %}
					<th class="all">{% trans %}Service{% endtrans %}</th>
					<th class="desktop">{% trans %}Category{% endtrans %}</th>
				</tr>
				</thead>

				<tbody>

				{% for data in data %}
					<tr>
						{% if is_granted('ROLE_SERVICES_EDIT') or is_granted('ROLE_SERVICES_DELETE') %}
						<td align="center">
							<!-- Dropdown menu -->
							<div class="btn-group">
								<button type="button" class="btn btn-primary btn-xs dropdown-toggle"
										data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
								<div class="dropdown-menu">
									{% if is_granted('ROLE_SERVICES_EDIT') %}
									<a class="dropdown-item" href="{{ path('service_edit', {'id': data.id}) }}"><i
												class="mdi mdi-pencil"></i> {% trans %}Edit{% endtrans %}</a>
									{% endif %}
									{% if is_granted('ROLE_SERVICES_DELETE') %}
									<a class="dropdown-item" href="{{ path('service_delete', {'id': data.id}) }}"
									   onclick="return confirm('{% trans %}Delete_message{% endtrans %} {{ data.serviceType }}');"><i
												class="mdi mdi-delete text-danger"></i> {% trans %}Delete{% endtrans %}</a>
									{% endif %}
								</div>
							</div>
							<!-- End dropdown menu -->
						</td>
						{%  endif %}

						<td>
							<a href="{{ path('service_id', {'id': data.id}) }}">{{ data.serviceType }}</a>
						</td>
						<td>
							<span class="badge badge-primary">{{ data.category.name }}</span>
						</td>
					</tr>
				{% endfor %}

				</tbody>
			</table>
		</div>
	</div>

{% endblock %}

{% block javascripts %}

	{{ parent() }}

	{% for data in category %}
		{% if query == data.id %}
			{% set pdfCat = data.name %}
		{% endif %}
	{% endfor %}
	{% if query == 'all' or query == null %}
		{% set pdfCat = 'Alles' %}
	{% endif %}

	<script type="text/javascript">
		$(document).ready(function () {

			var table = $('#datatable-buttons').DataTable({
				lengthChange: false,
				pageLength: 50,
				{% if is_granted('ROLE_SERVICES_EDIT') or is_granted('ROLE_SERVICES_DELETE') %}
				columnDefs: [
					{"orderable": false, "targets": 0}
				],
				order: [[1, "asc"]],
				{%  else %}
				columnDefs: [
					{"orderable": true, "targets": 0}
				],
				order: [[0, "asc"]],
				{%  endif %}

				{% if app.request.getLocale() == 'nl' %}
				language: {
					url: "{{ asset('assets/plugins/datatables/nl_NL.json') }}"
				},
				{%  endif %}
				initComplete: function () {
					setTimeout( function () {
						table.buttons().container().appendTo( '#datatable-buttons_wrapper .col-md-6:eq(0)' );
					}, 10 );
				}
			});
		});
	</script>
{% endblock %}
<div class="row align-items-center">
	<div class="col">
	    <h3>Orders</h3>
    </div>
        
    <div class="col-4  ">
	    <div class="btn-group float-right">
	    	{% if is_granted('ROLE_SERVICES_CREATE') %}
	    		<a href="{{ path( 'app_order_create', {'entity': 'person', 'id': data.id} ) }}" class="btn btn-trans btn-sm btn-purple waves-effect"><i class="fa fa-plus"></i></a>
	    	{% endif %}
	    </div>
    </div>
        
</div>
{%if data.customer is not empty %}
<table class="table table-bordered table-striped">   
    <tbody>
        <thead>
            <tr>
            	<td><b>Order</b></td>
            	<td><b>Datum</b></td>
            	<td><b>Orderstatus</b></td>
            	<td><b>Artikel</b></td>
            	<td><b>Totaal</b></td>
        	</tr>
        </thead>
    {% for customer in data.customer %}
        <tr>
            <td>
            	<a href="{{ path('app_order', {'id': data.id, 'orderID': customer.id }) }}">#{{customer.id}}</a>
            	 
            	 
            	 <!-- Dropdown -->
		    	{% if is_granted('ROLE_SERVICES_EDIT') or is_granted('ROLE_SERVICES_DELETE') %}
			    <div class="dropdown pull-right">
                    <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="mdi mdi-dots-horizontal"></i>
                    </a>
                    
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        {% if is_granted('ROLE_SERVICES_EDIT') %}
                        <a href="{{ path('app_order_edit', { 'id': data.id, 'orderID': customer.id}) }}" class="dropdown-item">Bewerken</a>
                        {% endif %}
                        <!-- item-->
                        {% if is_granted('ROLE_SERVICES_DELETE') %}
                        <a href="{{ path('app_order_delete', { 'id': data.id, 'orderID': customer.id}) }}" class="dropdown-item">Verwijderen</a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                <!-- End Dropdown -->
            </td>
            	
            <td>
				{{ customer.orderDate ? customer.orderDate|date('d-m-Y') }}
            </td>
            <td>
            	{% if customer.orderStatus == "In behandeling" %}
            		<span class="badge badge-pink">{{ customer.orderStatus }}</span>
            	{% endif %}
            	{% if customer.orderStatus == "Afgerond" %}
            		<span class="badge badge-purple">{{ customer.orderStatus }}</span>
            	{% endif %}
            	{% if customer.orderStatus == "Geannuleerd" %}
            		<span class="badge badge-secondary">{{ customer.orderStatus }}</span>
            	{% endif %}
            	{% if customer.orderStatus == "In de wacht" %}
            		<span class="badge badge-pink">{{ customer.orderStatus }}</span>
            	{% endif %}
            	{% if customer.orderStatus == "Terugbetaald" %}
            		<span class="badge badge-secondary">{{ customer.orderStatus }}</span>
            	{% endif %}
            	{% if customer.orderStatus == "Wachtend op betaling" %}
            		<span class="badge badge-pink">{{ customer.orderStatus }}</span>
            	{% endif %}
            </td>
            <td>
				{% for details in customer.orderItem %}
            		
            		<li>
            			{{ details.orderedItem.alternateName }}
            		</li>
            	{% endfor %}            
            </td>
            
            <td>
            	{% set totalPrice = 0 %}
            	
            	{% for details in customer.orderItem %}
            		
            		
            		{% set price = details.orderedItem.price %}
            		{% set quantity = details.orderQuantity|number_format %}
            		{% set itemPrice = price * quantity %}
            		
            		{% set totalPrice = totalPrice + itemPrice %} 

            	{% endfor %}
            	â‚¬ {{ totalPrice|number_format(2, '.','') }}
            			
            </td>
        </tr>
    {% endfor %} 
   
    </tbody>
</table>
{% endif %} 
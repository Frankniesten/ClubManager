<div class="row align-items-center">
	<div class="col">
	    <h3>Rollen</h3>
    </div>
        
    <div class="col-4  ">
    	{% if is_granted('ROLE_PERSON_EDIT') %}
	    <div class="btn-group float-right">
	    	<a href="{{ path('app_person_memberOf_edit', {'id': data.id}) }}" class="btn btn-sm btn-trans btn-purple waves-effect"><i class="fa fa-plus"></i></a>
	    </div>
	    {% endif %}
    </div>
        
</div>
{%if data.memberOf is not empty %}
<table class="table table-bordered table-striped">   
    <tbody>
        <thead>
            <tr>
            	<td><b>Rollen</b></td>
            	<td><b>Omschrijving</b></td>
        	</tr>
        </thead>
    {% for memberOf in data.memberOf %}
        <tr>
            <td>{{ memberOf.programName }}
	            
	            {% if is_granted('ROLE_PERSON_EDIT') %}
	            <!-- Dropdown -->
			    <div class="dropdown pull-right">
                    <a href="" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="mdi mdi-dots-horizontal"></i>
                    </a>
                    
                    <div class="dropdown-menu dropdown-menu-right">
                        <!-- item-->
                        <a href="{{ path('app_person_memberOf_edit', {'id': data.id}) }}" class="dropdown-item">Bewerken</a>
                    </div>
                </div>
                {% endif %}
                
            </td>
            <td>
	            {{ memberOf.description | truncate(100) }}
            </td>
            
            
        </tr>
    {% endfor %} 
   
    </tbody>
</table>
{% endif %} 